                            <span asp-validation-for="DistanceMatrixViewModel.Origin" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="DistanceMatrixViewModel.Destination" class="form-control border-0 shadow" />
                            <label asp-for="DistanceMatrixViewModel.Destination" class="ms-2"></label>
                            <span asp-validation-for="DistanceMatrixViewModel.Destination" class="text-danger"></span>
                        </div>*@
                        <div class="form-floating py-2 col-12">
                            <input asp-for="CarType" class="form-control border-0 shadow" />
                            <label asp-for="CarType" class="ms-2"></label>
                            <span asp-validation-for="CarType" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="TotalSeats" class="form-control border-0 shadow" />
                            <label asp-for="TotalSeats" class="ms-2"></label>
                            <span asp-validation-for="TotalSeats" class="text-danger"></span>
                        </div>
                        @*<div class="form-floating py-2 col-12">
                            <input asp-for="Car.pricePerKm" class="form-control border-0 shadow" />
                            <label asp-for="Car.pricePerKm" class="ms-2"></label>
                            <span asp-validation-for="Car.pricePerKm" class="text-danger"></span>
                        </div>*@


                        <div class="row pt-3">
                            <div class="col-6 col-md-6 mx-auto">
 
                                    <button type="submit" class="btn btn-outline-success form-control">ค้นหา</button>

                            </div>
                            <div class="col-6 col-md-6 mx-auto">
                                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary form-control">กลับสู่หน้าเมนู</a>
                            </div>


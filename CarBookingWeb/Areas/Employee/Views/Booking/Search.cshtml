                    </div>
                </div>

            </div>

        </form>

    </div>
</div>

<div class="row">
    @if (ViewData["Cars"] != null)
    {
        
        foreach (var car in (IEnumerable<Car>)ViewData["Cars"])
        {
            @if (@car.status != SD.StatusFixed || @car.status != SD.StatusSeatsFully)
            {
                <div class="col-12">
                    <div class="card mb-3">
                        <div class="card-body">
                            <h5 class="card-title">@car.CarName</h5>
                            <p class="card-text">Car Type: @car.CarType</p>
                            <p class="card-text">Total Seats: @car.TotalSeats</p>
                            <p class="card-text">Status: @car.status</p>
                            <div class="pl-1">
                                <div class="d-flex flex-wrap">
                            @if (ViewData["Seat"] != null)
                            {
                               
                                foreach (var seat in (IEnumerable<Seat>)ViewData["Seat"])
                                {
                                        
                                    if (@seat.CarId == @car.Id)
                                    {
                                            <div class="mx-2 mb-2">
                                                    <button type="button" class="btn  @(seat.IsAvailable ? "btn-success seat-toggle" : "btn-danger seat-toggle")" data-seat-id="@seat.Id" onclick="seatbooking('@Url.Action("seatbooking", "Booking")', @seat.Id)">
                                                        @seat.SeatCode
                                                    </button>

                                                    @*<a onClick=ToggleFixed('/Employee/Booking/seatbooking/@seat.Id') class="btn @(seat.IsAvailable ? "btn-success seat-toggle" : "btn-danger seat-toggle") btn-sm"><i class="bi bi-pencil-square"></i>@seat.SeatCode</a>*@
                                                @*@if (seat.IsAvailable)
                                                {
                                                   <button id="@seat.Id" type="button" class="btn btn-success btn-sm">@seat.SeatCode</button>
                                                }
                                                else
                                                {
                                                   <button id="@seat.Id" type="button" class="btn btn-danger btn-sm" disabled>@seat.SeatCode</button>
                                                }*@
                                            </div>
                                    }
                                
                                }
                                
                            }
                                </div>
                            </div>
                        </div>
                </div>
            </div>
            }
        }
    }
    else
    {
        <div class="col-12">
            <p>No cars found.</p>
        </div>
    }
</div>



